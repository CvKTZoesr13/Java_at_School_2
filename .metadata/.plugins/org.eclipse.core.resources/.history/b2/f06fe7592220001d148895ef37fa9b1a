import java.util.ArrayList;




public class ArrayListExample {
	public static void main(String[] args) {
		// creating arraylist
		ArrayList<String> list = new ArrayList<String>(20);
		list.add("HTML");
		list.add("Javascript");
		list.add("PHP");
		list.add("Java");
		for (int i = 0; i < 4; i++) {
			System.out.println(list.get(i));
		}
		list.add(2, "VueJS");
		System.out.println("**************************************************");
		System.out.println(list);
		System.out.println("**************************************************");
		list.clear();
		System.out.println(list);
	}
}